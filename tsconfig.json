{
  "compilerOptions": {
    "moduleResolution": "Node", // 搜寻文件的方式
    "outDir": "./dist", //  输出目录
    "sourceMap": true,
    "noImplicitAny": true,
    "module": "ESNext", // 处理模块导入的方式
    "target": "es5",
    "jsx": "react",
    "esModuleInterop": true, // 允许使用commonjs导出、导入
    "lib": ["DOM", "DOM.Iterable", "ESNext"]
  },
  "include": ["./src/**.*"],
  "exclude": ["./node_modules"]
}
