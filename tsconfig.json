{
  "compilerOptions": {
    "outDir": "./dist", // 输出文件夹
    "sourceMap": true, // 是否生成映射
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "esModuleInterop": true,
    "module": "commonjs",
    "target": "es5",
    "jsx": "react",
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "include": ["./src/**/*"],
  "exclude": ["node_modules", "**/*.spex.ts"]
}
